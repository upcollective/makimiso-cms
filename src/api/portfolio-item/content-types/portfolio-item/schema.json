{
  "kind": "collectionType",
  "collectionName": "portfolio_items",
  "info": {
    "singularName": "portfolio-item",
    "pluralName": "portfolio-items",
    "displayName": "Portfolio Item"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "description": {
      "type": "blocks",
      "required": true
    },
    "short_description": {
      "type": "text",
      "required": true
    },
    "images": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "featured_image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "client": {
      "type": "string"
    },
    "date": {
      "type": "date"
    },
    "technologies": {
      "type": "json"
    },
    "project_url": {
      "type": "string"
    },
    "case_study_content": {
      "type": "blocks"
    },
    "published": {
      "type": "boolean",
      "required": true,
      "default": false
    }
  }
}
