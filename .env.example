# Strapi Environment Configuration
# Copy this file to .env and fill in your actual values

# Strapi Settings
HOST=0.0.0.0
PORT=1337
APP_KEYS=your-app-keys-here
API_TOKEN_SALT=your-api-token-salt
ADMIN_JWT_SECRET=your-admin-jwt-secret
TRANSFER_TOKEN_SALT=your-transfer-token-salt

# Database (Supabase PostgreSQL)
DATABASE_CLIENT=postgres
DATABASE_HOST=your-supabase-host.supabase.co
DATABASE_PORT=5432
DATABASE_NAME=postgres
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your-supabase-password
DATABASE_SSL=true

# Supabase specific (if using Supabase storage)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key

# Development settings
NODE_ENV=development

# CORS settings (for API access from makimiso.com)
CORS_ENABLED=true
CORS_ORIGIN=["http://localhost:3000", "https://www.makimiso.com", "https://makimiso.com"]

# File upload settings
MAX_FILE_SIZE=5000000
